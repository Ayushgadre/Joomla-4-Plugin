<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>joomla</name>
	<author>Ayush gadre</author>
	<creationDate>April 2022</creationDate>
	<authorEmail>ayushgadre786@gmail.com</authorEmail>
	<authorUrl>https://github.com/Ayushgadre</authorUrl>
	<version>1.0.0</version>
	<description>A Heading plugin that concatenates your text with the heading of your site.</description>
	<files>
		<filename plugin="Ayush joomla 4 plugin">joomla.php</filename>
	</files>
	<media folder="media" destination="plg_system_joomla">
	</media>
	<languages>
		<language tag="en-GB">language/en-GB.plg_system_joomla.ini</language>
	</languages>
	<config>
		<fields name="params">
          
		  <!-- input field -->
			<fieldset name="basic">
				<field
					name="text_input"
					type="text"
					label="HEADINGS_TEXT_VS"
					description="HEADINGS_DESC_VS"
					default="World!"
				/>
			</fieldset>
          
		</fields>
	</config>
	
</extension>
